@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Class="mr-2" Style="vertical-align: middle;" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2" Class="mb-4">@Message</MudText>
        <MudTextField @bind-Value="_password" Label="비밀번호" Variant="Variant.Outlined"
                      InputType="InputType.Password" FullWidth="true" Margin="Margin.Dense"
                      Immediate="true" OnKeyUp="OnKeyUp" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">취소</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">확인</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string Title { get; set; } = "비밀번호 확인";

    [Parameter]
    public string Message { get; set; } = "게시글 작성 시 입력한 비밀번호를 입력해주세요.";

    private string _password = string.Empty;

    private void Cancel() => MudDialog?.Cancel();

    private void Submit() => MudDialog?.Close(DialogResult.Ok(_password));

    private void OnKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Submit();
        }
    }
}

@page "/admin/settings"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "AdminOnly")]
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>설정</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-6" Style="font-weight: 600;">설정</MudText>

    <MudGrid Spacing="3">
        <!-- 사용자 관리 카드 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardContent>
                    <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
                        <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Primary" Size="Size.Large" />
                        <div>
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">사용자 관리</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">사용자 정보, 역할, 상태 관리</MudText>
                        </div>
                    </div>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled"
                              Color="Color.Primary"
                              FullWidth="true"
                              Href="/admin/users">
                        관리 페이지로 이동
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- 카테고리 관리 카드 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardContent>
                    <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
                        <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Secondary" Size="Size.Large" />
                        <div>
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">카테고리 관리</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">게시판 카테고리 생성, 수정, 삭제</MudText>
                        </div>
                    </div>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled"
                              Color="Color.Secondary"
                              FullWidth="true"
                              Href="/admin/categories">
                        관리 페이지로 이동
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- 대시보드 카드 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="2" Class="h-100">
                <MudCardContent>
                    <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
                        <MudIcon Icon="@Icons.Material.Filled.Dashboard" Color="Color.Info" Size="Size.Large" />
                        <div>
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">대시보드</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">통계 및 빠른 작업</MudText>
                        </div>
                    </div>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled"
                              Color="Color.Info"
                              FullWidth="true"
                              Href="/admin">
                        대시보드로 이동
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
